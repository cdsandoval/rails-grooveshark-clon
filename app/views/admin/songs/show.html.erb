<h1>Song: <%= @song.title %></h1>
<p>
  <strong>Duration:</strong>
  <%= @song.duration %>
</p>

<h2>Artist</h2>
<table>
    <tr>
        <thead>
            <th>Name</th>
            <th>Age</th>
        </thead>
    </tr>
      <% @song.artists.each do | artist | %>
    <tr>
        <td><%= artist.name%></td>
        <td><%= artist.age%></td>
    </tr>
    <%end%>
</table>


<h2>Albums</h3>
<table>
    <tr>
        <thead>
            <th>Title</th>
            <th>Rating</th>
        </thead>
    </tr>
  <% @song.albums.each do | album | %>
    <tr>
        <td><%= album.title%></td>
        <td><%= album.rating%></td>
    </tr>
    <%end%>
</table>

<%= link_to 'Edit', edit_admin_song_path(@song) %> |
<%= link_to 'Back', admin_artists_path %>