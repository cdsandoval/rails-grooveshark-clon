<h1>Album: <%= @album.title %></h1>
<% if @album.cover.attached? %>
<%= image_tag @album.cover.variant(resize: "300x300") %>
<% end %>
<p>
  <strong>Rating:</strong>
  <%= @album.rating %>
</p>


<h2>Songs</h2>
<table>
    <tr>
        <thead>
            <th>Title</th>
            <th>Duration</th>
            
            <th>Progress</th>
        </thead>
    </tr>
      <% @album.songs.each do | song | %>
    <tr>
        <td><%= song.title%></td>
        <td><%= song.duration%></td>
        
        <td><%= song.progress%></td>
    </tr>
    <%end%>
</table>


<h2>Artists</h3>
<table>
    <tr>
        <thead>
            <th>Name</th>
            <th>Age</th>
        </thead>
    </tr>
  <% @album.artists.each do | artist | %>
    <tr>
        <td><%= artist.name%></td>
        <td><%= artist.age%></td>
    </tr>
    <%end%>
</table>

<%= link_to 'Edit', edit_admin_album_path(@album) %> |
<%= link_to 'Back', admin_albums_path %>
